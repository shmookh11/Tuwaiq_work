@model AppUser
@{
    ViewData["Title"] = "User Details";
}

<h2>User Details</h2>

<div>
    <strong>Email:</strong> @Model.Email
</div>
<div>
    <strong>Phone:</strong> @Model.PhoneNumber
</div>
@if (Model.ProfilePicture != null)
{
    <div>
        <img src="data:image;base64,@Convert.ToBase64String(Model.ProfilePicture)" width="150" />
    </div>
}
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
